<div class="row">
  <div class="col-md-6">
    <% if @product.image.present? %>
      <%= image_tag(@product.image.medium.url, class: 'thumbnail')%>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: 'thumbnail')%>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2><%= @product.title %></h2>
    <div style="height:100px;">
      <p>
        <%= @product.description %>
      </p>
    </div>
    <div>
      库存：<%= @product.quantity %>
    </div>
    <div class="product-price">
      ¥ <%= @product.price %>
    </div>
    <div class="cart-btn pull-left">
      <% if @product.quantity.present? && @product.quantity > 0 %>
        <%= link_to(content_tag(:i, "加入购物车", class: "fa fa-cart-plus"), add_to_cart_product_path(@product), method: :post, class: "btn btn-lg btn-danger")%>
      <% else %>
        <h3><i class="fa fa-frown-o" aria-hidden="true"></i> 已售罄</h3>
      <% end %>
    </div>
  </div>
</div>
