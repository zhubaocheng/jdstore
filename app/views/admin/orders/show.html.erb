<div class="row">
  <div class="col-md-12">
    <div style="margin-top: 20px;">
      <h2 class="pull-left group">订单明细</h2>
      <span>
        <% if @order.is_paid? %>
          <label class="label label-sm label-success">已付款</label>
        <% else %>
          <label class="label label-sm label-warning">未付款</label>
        <% end %>
      </span>
      <%= render "admin/orders/state_option", order: @order %>
    </div>


    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品名称</th>
          <th>单价</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>

        <% @product_lists.each do |product_list| %>
          <tr>
            <td>
              <%= product_list.product_name %>
            </td>
            <td>
              <%= product_list.product_price %>
            </td>
            <td>
              <%= product_list.quantity %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        总计：¥ <%= @order.total %>
      </span>
    </div>

    <hr>

    <h2>寄送信息</h2>

    <table class="table table-bordered table-striped">
      <tbody>
        <tr>
          <td>
            订购人
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.billing_name %> - <%= @order.billing_address %>
          </td>
        </tr>
        <tr>
          <td>
            收货人
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.shipping_name %> - <%= @order.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
