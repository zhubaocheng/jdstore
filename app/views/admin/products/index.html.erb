<h2>新品列表</h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to(content_tag(:i, "新增产品", class: "fa fa-plus"), new_admin_product_path, class: "btn btn-primary btn-sm")%>
</div>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>产品图片</th>
      <th>产品名称</th>
      <th>单价</th>
      <th>操作选项</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail")%>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= product.title %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= link_to(content_tag(:i, "修改商品", class: "fa fa-pencil"), edit_admin_product_path(product))%>
          <%= link_to("上移", move_up_admin_product_path(product), class: "fa fa-arrow-up", :method => :post)%>
          <%= link_to("下移", move_down_admin_product_path(product), class: "fa fa-arrow-down", :method => :post)%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
